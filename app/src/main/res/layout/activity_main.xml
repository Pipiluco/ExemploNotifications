<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="TÃ­tulo" />

    <EditText
        android:id="@+id/edtMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTitulo"
        android:hint="Mensagem" />

    <Button
        android:id="@+id/btnChannel01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMensagem"
        android:onClick="enviarNoChannel01"
        android:text="Enviar no canal 01" />

    <Button
        android:id="@+id/btnChannel02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChannel01"
        android:onClick="enviarNoChannel02"
        android:text="Enviar no canal 02" />

</RelativeLayout>